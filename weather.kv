#:kivy 2.3.1
GridLayout:
    cols: 1
    padding: 20
    spacing: 20
    row_default_height: "50dp"
    row_force_default: True

    TextInput:
        id: city_input
        hint_text: "Enter city name"
        size_hint_y: None
        height: "40dp"
        multiline: False

        background_normal: ''
        background_active: ''
        background_color: 0,0,0,0

        foreground_color: 0,0,0,1
        cursor_color: 0,0,0,1
        padding: [12,12,12,12]

        canvas.before:
            Color:
                rgba: 1,1,1,1
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [20,]
            Color:
                rgba: self.foreground_color
    GridLayout:
        cols:3
        spacing: 10
        size_hint_y: None
        height: "40dp"

        Button:
            text: "Patras"
            on_release: app.get_city_weather("Patras")
        
        Button:
            text: "Athens"
            on_release: app.get_city_weather("Athens")
        
        Button:
            text: "Thessaloniki"
            on_release: app.get_city_weather("Thessaloniki")

    Button:
        text: "Get Weather"
        size_hint_y: None
        height: "40dp"
        on_release: app.get_weather()

    Label:
        id: result_label
        text: "Weather info will appear here"
        halign: "center"
        valign: "center"
        text_size: self.size
    
    AsyncImage:
        id: weather_icon
        source: ""
        size_hint_y: None
        height: "100dp"
        opacity: 0
        on_source:
            self.opacity = 1 if self.source else 0